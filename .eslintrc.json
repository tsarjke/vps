{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"airbnb",
		"airbnb/hooks"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 13,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"react/function-component-definition": [
			"error",
			{
				"namedComponents": "arrow-function"
			}
		],
		"react/jsx-filename-extension": [
			"warn",
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"react-hooks/exhaustive-deps": 0
	}
}